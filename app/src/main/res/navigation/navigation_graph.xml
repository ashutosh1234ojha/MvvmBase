<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ashutosh1234ojha.mvvmbase.views.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/from_splash_to_login"
            app:destination="@+id/loginFragment" />
        <action
            android:id="@+id/from_splash_to_home"
            app:destination="@+id/fragment_home" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ashutosh1234ojha.mvvmbase.views.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/from_login_to_home"
            app:destination="@+id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ashutosh1234ojha.mvvmbase.views.HomeFragment"
        tools:layout="@layout/fragment_home">

    </fragment>

</navigation>